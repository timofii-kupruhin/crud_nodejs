<html lang="en">
<head>
	<%- include("../partials/head.ejs") -%>

	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Изменение пароля</title>
</head>
<body>
	<%- include("../partials/header.ejs") -%>
	<div class="container mt-5">
	    <h2> Смена пароля </h2>

		<form method="POST">
		<div class="form-group">
		  <label for="oldPassword">Старый пароль:</label>
		  <input type="password" class="form-control" id="oldPassword" minlength='5' maxlength='15' name="oldPassword" required>
		  <div class="invalid-feedback">
		    Пожалуйста, введите старый пароль.
		  </div>
		</div>

		<div class="form-group">
		  <label for="newPassword">Новый пароль:</label>
		  <input type="password" class="form-control" id="newPassword"  minlength='5' maxlength='15' name="newPassword" required>
		  <div class="invalid-feedback">
		    Пожалуйста, введите новый пароль.
		  </div>
		</div>

		<div class="form-group">
		  <label for="confirmPassword">Подтвердите новый пароль:</label>
		  <input type="password" class="form-control" id="confirmPassword"  minlength='5' maxlength='15' name="confirmPassword" required>
		  <div class="invalid-feedback" id="passwordMismatch">
		    Пароли не совпадают.
		  </div>
		</div>
		<br>
		<button type="submit" class="btn btn-primary"> Подтвердить </button>
		</form>
	</div>
	<script>
	  function validateForm() {
	    var password = document.getElementById("newPassword").value;
	    var confirmPassword = document.getElementById("confirmPassword").value;

	    if (password !== confirmPassword) {
	      document.getElementById("passwordMismatch").style.display = "block";
	      return false;
	    } else {
	      document.getElementById("passwordMismatch").style.display = "none";
	      return true;
	    }
	  }
	</script>
	<%- include("../partials/footer.ejs") -%>

</body>
</html>